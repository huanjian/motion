    if (counter == 2) :
        cv2.imwrite('0.jpg',frame)
        frame = cv2.imread('0.jpg', 0)
        cv2.imshow('Frame',frame)

    if (counter == 150) :
        cv2.imwrite('1.jpg',frame)
        frame = cv2.imread('1.jpg', 0)
        cv2.imshow('Frame',frame)
        
    #no.8    

    if (counter == 200) :
        cv2.imshow('Frame',frame)
        cv2.imwrite('2.jpg',frame)
        
    
    counter = counter + 1

